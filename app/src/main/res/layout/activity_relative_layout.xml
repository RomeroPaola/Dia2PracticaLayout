<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    tools:context=".RelativeLayoutActivity">
    <TextView
        android:id="@+id/txt_1" android:layout_width="100dp"
        android:layout_height="wrap_content" android:text="1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#0000FF" android:gravity="center"/>
    <TextView
        android:id="@+id/txt_2" android:layout_width="100dp"
        android:layout_height="wrap_content" android:text="2"
        android:layout_below="@+id/txt_3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#00FF00" android:gravity="center" />
    <TextView
        android:id="@+id/txt_3" android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="3"
        android:layout_below="@+id/txt_1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#FF0000" android:gravity="center"/>
</RelativeLayout>